.replyInput {
  position: fixed;
  margin-left: -20rpx;
  padding: 0 10px;
  width: 100%;
  bottom: 0;
  z-index: 999;
  border-top: .3px solid #E0E0E0;
  background-color: #FCFCFC;
}
.replyInput .popup {
  background-color: #fff;
  min-height: 140px;
  padding: 10px;
  z-index: 99;
  -webkit-transition: height .5s;
  transition: height .5s;
}
.replyInput .popup::after {
  display: block;
  content: '';
  clear: both;
}
.replyInput .popup .slot {
  display: inline-block;
  background-color: #EBEBEB;
  padding: 0 5px;
  -webkit-border-radius: 10px;
          border-radius: 10px;
  height: 20px;
  line-height: 20px;
  font-size: 10px;
  margin: 10px 0;
}
.replyInput .popup .uni-editor {
  min-height: 40px;
  width: 500rpx;
  padding: 10px;
  background-color: #E0E0E0;
  -webkit-border-radius: 10px;
          border-radius: 10px;
}
.replyInput .popup .uni-editor .editor {
  width: 500rpx;
  min-height: 60px;
  line-height: 30px;
  font-size: 14px;
  outline: none;
}
.replyInput .popup .btn {
  position: absolute;
  margin-top: -30px;
  left: 580rpx;
}
.replyInput .popup .reply-bottom {
  height: 30px;
  line-height: 30px;
}
.replyInput .popup .reply-bottom .img {
  height: 30px;
  width: 30px;
  float: left;
}
.replyInput .emoji {
  width: 750rpx;
  margin-left: -20rpx;
  background-color: #ededed;
  -webkit-transition: all .5s;
  transition: all .5s;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.replyInput .emoji image {
  height: 30px;
  width: 30px;
  margin: 0 calc(93.75rpx - 30px);
}
.replyInput .image-view .show-image {
  float: left;
  height: 225rpx;
  width: 225rpx;
  margin-top: 20px;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  border: 1px dashed #000;
  -webkit-border-radius: 10px;
          border-radius: 10px;
  margin-right: 10rpx;
  text-align: center;
  line-height: 100px;
}

