page {
  padding: 0 15rpx;
  background-color: #fff;
}
.top-navbar-btn {
  border: none !important;
  background-color: #fff !important;
  padding: 0 15rpx;
  font-size: 16px;
}
.select-acticle {
  height: 40px;
  line-height: 40px;
}
.select-acticle .select-prompt {
  padding: 5px 10px;
  -webkit-border-radius: 10px;
          border-radius: 10px;
  background-color: whitesmoke;
}
.title {
  height: 40px;
  line-height: 40px;
  border-top: .1px solid #EDEDED;
  border-bottom: .1px solid #EDEDED;
  font-size: 14px;
}
.container .txt {
  min-height: 80px !important;
  line-height: 20px;
  padding: 10px 0;
  font-size: 14px;
}
.video-container {
  position: relative;
  width: 600rpx;
}
.video-container .video-icon {
  position: absolute;
  top: calc(28rpx + 15px);
  right: 20rpx;
  z-index: 999;
}
.video-container .video {
  margin-top: 5px;
  width: 600rpx;
  height: 400rpx;
}
.addImg::after {
  display: block;
  content: '';
  clear: both;
}
.addImg .image {
  display: block;
  float: left;
  height: 225rpx;
  width: 225rpx;
  margin-top: 20px;
  margin-right: 15rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  border: .5px solid #000;
  -webkit-border-radius: 10px;
          border-radius: 10px;
}
.addImg .add {
  float: left;
  height: 225rpx;
  width: 225rpx;
  margin-top: 20px;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  border: 1px dashed #000;
  -webkit-border-radius: 10px;
          border-radius: 10px;
  text-align: center;
  line-height: 100px;
}
.addImg .add .img {
  height: 40px;
  width: 40px;
}
.popup-top {
  height: 40px;
  padding: 15px;
  text-align: center;
}
.topic-list {
  height: 50px;
  margin: 20px 0 10px 15px;
  line-height: 50px;
  font-size: 16px;
}
.topic-list .topic-image {
  float: left;
  margin-right: 20px;
}

